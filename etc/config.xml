<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <portfolio>
            <portfolio_config_group>
                <title>Portfolio</title>
                <meta_description>Portfolio</meta_description>
                <meta_keywords>Portfolio</meta_keywords>
                <total_portfolio>10</total_portfolio>
            </portfolio_config_group>
        </portfolio>

        <email_section>
            <sendmail>
                <enabled>1</enabled>
                <sender>general</sender>
                <email_template>email_section_sendmail_email_template</email_template>
            </sendmail>
        </email_section>
    </default>
</config>
