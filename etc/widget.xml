<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Ecentura\Portfolio\Block\Portfolio\PortfolioWidget" id="vimagento_widget_sample">
        <label>Portfolio Widget</label>
        <description>Portfolio Widget List</description>
        <parameters>
            <parameter name="total_portfolio" sort_order="10" visible="true" xsi:type="text" required="true">
                <label>Số lượng Portfolio hiển thị</label>
            </parameter>
            <parameter name="is_show_slider" sort_order="30" visible="true" xsi:type="select" required="true">
                <label>Trạng thái Slider</label>
                <options>
                    <option name="show" value="true" selected="true">
                        <label>Hiển thị</label>
                    </option>
                    <option name="hide" value="false">
                        <label>Ẩn</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
